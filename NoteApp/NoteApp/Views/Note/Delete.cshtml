@model NoteApp.Models.Note
@{
    ViewData["Title"] = "Delete";
}

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Note Deleting</h5>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
    </div>
    <form asp-action="Delete" asp-route-id="@Model.NoteId" method="post">
        <div class="modal-body">
            <div class="mb-3">
                <label asp-for="Title" class="control-label"></label>
                <span class="form-control">@Model.Title</span>
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="control-label"></label>
                <span class="form-control">@Model.Category</span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="control-label"></label>
                <span class="form-control">@Model.Description</span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary" asp-route-id="@Model.NoteId">Confrim deleting</button>
        </div>
    </form>
</div>
